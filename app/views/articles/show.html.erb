<p id="notice"><%= notice %></p>

<p>
  <h1><%= @article.name %></h1>
</p>

<p>
  <b>Author:</b>
  <%= @article.author %>
</p>

<p>
  <b>Body:</b>
  <%= @article.body %>
</p>
<h2> Comments</h2>
<%= render @article.comments %>

<h2>Add a Comment</h2>
<%= render "comments/form" %>

<div class="btn-group" >
<%= link_to 'Edit', edit_article_path(@article) ,:class=>"btn btn-primary", :method=>"get" %>
<%= link_to 'Back', articles_path, :class=>"btn btn-primary", :method=>"get" %>
</div>